<header id="desktop">
    <div class="button-row">
        {#<div class="fast-order">
            <embed id="fish-bone" type="image/svg+xml" src="/assets/img/fish-bone (1).svg"/>
            <span>Быстрый заказ</span>
        </div>#}
        <div class="user_basket">
            {% set sum = app.session.get('totalSum') %}
            <div class="basket-container">
                <i class="fas fa-shopping-cart"></i>
                <span class="sum">{% if sum == null %}0 ₴{% else %}{{ sum }} ₴{% endif %}</span>
            </div>
            <i id="user" class="far fa-user" data-user="{% if app.user is not null %}{{ path('user', {'uniqueId': app.user.uniqueId}) }}{% else %}{{ path('login') }}{% endif %}"></i>
        </div>
    </div>
    <div class="row">
        <div class="logo-container">
            <embed id="logo" type="image/svg+xml" src="/assets/img/logo.svg"/>
            <div id="logo-text">
                <span id="lipinskie">Lipinskie</span> <span id="raki">Raki</span>
                <div class="crayfish">
                    Crayfish & Delicacies
                </div>
            </div>
        </div>
    </div>
    <div class="row nav-row">
        <nav>
            <ul>{% set mob_active = active %}
                <li {% if active == 'home' %} {% set active = false %} class="active-nav"{% endif %}
                        data-location="{{ path('home') }}">Главная
                </li>
                <li {% if active == 'zhivye-raki' %} {% set active = false %} class="active-nav"{% endif %}
                        data-location="{{ path('category_show',{'slug': 'zhivye-raki'}) }}">Живые раки
                </li>
                <li {% if active == 'zharenye-raki' %} {% set active = false %} class="active-nav"{% endif %}
                        data-location="{{ path('category_show',{'slug': 'zharenye-raki'}) }}">Жареные раки
                </li>
                <li {% if active == 'varenye-raki' %} {% set active = false %} class="active-nav"{% endif %}
                        data-location="{{ path('category_show',{'slug': 'varenye-raki'}) }}">Вареные раки
                </li>
                <li class="toogle-dropdown {% if active %}active-nav{% endif %}">Ассортимент</li>
            </ul>
        </nav>
    </div>
    <div class="dropdown">
        <ul>
           {{ render(controller('App\\Controller\\CategoryController::renderCategories')) }}
        </ul>
    </div>
</header>
<header id="mobile">
    <img id="mobile-logo" src="/assets/img/header-logo.svg"/>
    <div class="mobile-user_basket">
        <div class="basket-container">
            <span class="sum">{% if sum == null %}0 ₴{% else %}{{ sum }} ₴{% endif %}</span>
        </div>
        <div id="menu">
            <object  type="image/svg+xml" data="/assets/img/menu.svg"></object>
        </div>
    </div>
</header>
